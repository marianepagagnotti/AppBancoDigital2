<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.PgInicial" BackgroundColor="#fbf6f6">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                
                <StackLayout BackgroundColor="#ffccff" Padding="20" Spacing="20">

                    <StackLayout Orientation="Horizontal">
                        <ImageButton Source="user.png" 
                                 Padding="10" BackgroundColor="#bb6f2c"
                                 CornerRadius="50" 
                                 HorizontalOptions="StartAndExpand"/>
                        <ImageButton Source="olho_naovisivel.png"
                                 Padding="10"
                                 BackgroundColor="#ffccff" 
                                 CornerRadius="50"
                                 x:Name="eyebutton"/>
                        <ImageButton Source="envelope.png"
                                 Padding="10"
                                 BackgroundColor="#ffccff"
                                 CornerRadius="50"/>
                        <ImageButton Source="dots.png"
                                 Padding="10"
                                 BackgroundColor="#ffccff"
                                 CornerRadius="50"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Padding="20">
                        <Label Text="Olá," TextColor="black" FontSize="20" FontAttributes="Bold"/>
                        <Label x:Name="LblUser" FontSize="20" Text="{Binding nome}" TextColor="black" FontAttributes="Bold"/>
                    </StackLayout>

                </StackLayout>

                <StackLayout>

                    <StackLayout Padding="20">
                        <Label Text="Conta"
                           TextColor="Black" 
                           FontSize="20"/>
                        <Label x:Name="LblSaldo"
                           FontSize="21" 
                           TextColor="Black" 
                           FontAttributes="Bold"/>
                    </StackLayout>

                </StackLayout>

                <ScrollView Orientation="Horizontal">
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20" Padding="10">

                        <StackLayout>
                            <ImageButton Source="pix.png"
                                     Clicked="imgpix"
                                     BackgroundColor="#f0f1f5"
                                     Padding="15"
                                     CornerRadius="50"
                                     WidthRequest="60"
                                     HeightRequest="60"/>

                            <Label TextColor="Black" 
                               FontSize="14"
                               HorizontalOptions="Center"
                               FontAttributes="Bold" 
                               Text="Pix"/>
                        </StackLayout>

                        <StackLayout>
                            <ImageButton Source="pagar.png"
                                     BackgroundColor="#f0f1f5"
                                     Padding="10"
                                     CornerRadius="50"
                                     WidthRequest="60"
                                     HeightRequest="60"/>
                            <Label TextColor="Black"
                               FontSize="14" 
                               HorizontalOptions="Center"
                               FontAttributes="Bold" 
                               Text="Pagar"/>
                        </StackLayout>



                        <StackLayout>
                            <ImageButton Source="boleto.png"
                                     BackgroundColor="#f0f1f5" 
                                     Padding="15"
                                     CornerRadius="50"
                                      WidthRequest="60"
                                     HeightRequest="60"/>

                            <Label TextColor="Black"
                               FontSize="14"
                               HorizontalOptions="Center"
                               FontAttributes="Bold" 
                               Text="Boleto"/>
                        </StackLayout>


                        <StackLayout>
                            <ImageButton Source="cobrar.png"
                                     BackgroundColor="#f0f1f5" 
                                     Padding="15" 
                                     CornerRadius="50"
                                     WidthRequest="60
                                     " HeightRequest="60"/>

                            <Label TextColor="Black" 
                               FontSize="14"
                               HorizontalOptions="Center"
                               FontAttributes="Bold" 
                               Text="Cobrar"/>
                        </StackLayout>



                    </StackLayout>
                </ScrollView>

                <StackLayout>
                    <BoxView HeightRequest="1" Color="#f0f1f5" Margin="0,15,10,-10"/>
                    <StackLayout Padding="25">
                        <Grid RowDefinitions="25,49,20,35,*" ColumnDefinitions="*">
                            <Image Source="cartao.png" HorizontalOptions="StartAndExpand" Grid.Row="0"/>
                            <Label Text="Cartão de crédito" FontAttributes="Bold" TextColor="Black" FontSize="17" Grid.Row="1" Margin="0,15"/>
                            <ImageButton Source="arrowright.png" HorizontalOptions="EndAndExpand" CornerRadius="50"
                                     Grid.Row="1" Grid.Column="1" WidthRequest="20" HeightRequest="20" BackgroundColor="White"/>

                            <Label Text="Fatura atual" TextColor="Gray" FontAttributes="Bold" FontSize="17" Grid.Row="2"/>
                            <Label x:Name="LblFatura" TextColor="Black" FontAttributes="Bold" FontSize="25" Grid.Row="3"/>

                            <StackLayout Orientation="Horizontal" Grid.ColumnSpan="2" Grid.Row="4">
                                <Label Text="Limite disponível de" TextColor="Gray" FontAttributes="Bold" FontSize="17"/>
                                <Label Text="R$0,00" x:Name="LblLimite" TextColor="Gray" FontAttributes="Bold" FontSize="17"/>
                            </StackLayout>
                        </Grid>
                    </StackLayout>
                </StackLayout>


                <BoxView HeightRequest="1" Color="#f0f1f5" Margin="0,0,10,-10"/>



            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>